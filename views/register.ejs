<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-300 flex items-center justify-center"> 
  <div class="w-96 h-[70vh] bg-zinc-100 px-4 py-5 rounded" >
    <h1 class="text-4xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Create Your Account .</h1>
    <form action="/register" method="post"> 
      <input class="block mt-2 w-full px-3 py-2"  type="text" name="username" placeholder="username">
      <input class="block mt-2 w-full px-3 py-2"  type="email" name="email" placeholder="email">
      <input class="block mt-2 w-full px-3 py-2"  type="number" name="contact" placeholder="contact">
      <input class="block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
      <!-- <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">Forgot Password?</a> -->
      <input class="block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account ">
    </form>
    <a href="/  ">Login in existing account  </a>
  </div>
</div>
 
